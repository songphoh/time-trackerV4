{
  "version": 2,
  "functions": {
    "server.js": {
      "maxDuration": 30,
      "memory": 1024,
      "runtime": "nodejs20.x",
      "maxLambdaSize": "50mb"
    }
  },
  "rewrites": [
    {
      "source": "/health",
      "destination": "/server.js"
    },
    {
      "source": "/api/(.*)",
      "destination": "/server.js"
    },
    {
      "source": "/debug/(.*)",
      "destination": "/server.js"
    },
    {
      "source": "/admin/(.*)",
      "destination": "/server.js"
    },
    {
      "source": "/(.*)",
      "destination": "/server.js"
    }
  ],
  "env": {
    "NODE_ENV": "production"
  },
  "regions": ["sin1"]
}
